<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:background="#FCFFD4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.projects.kata.mateusz.primaryschool.Chat">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editPole"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="39dp"
        android:layout_x="53dp"
        android:layout_y="183dp" />

    <TextView
        android:text="Gość"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_x="53dp"
        android:layout_y="32dp"
        android:id="@+id/textView6" />

    <TextView
        android:text="Jest dzisiaj przedstawienie?"
        android:background="#ffffff"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_x="53dp"
        android:layout_y="60dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="Andrzej"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_x="53dp"
        android:layout_y="87dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Tak , jest :)"
        android:background="#ffffff"
        android:layout_width="209dp"
        android:layout_height="29dp"
        android:layout_x="53dp"
        android:layout_y="112dp"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="67dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_x="280dp"
        android:layout_y="183dp"
        android:id="@+id/imageButton"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_height="45dp"
        android:background="@android:color/transparent" />

</AbsoluteLayout>
